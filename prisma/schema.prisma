// Define the Prisma client generator to be used
generator client {
  provider = "prisma-client-js"
}

// Define the datasource used by Prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the User model
model User {
  id String @id @default(uuid()) // Define the User's unique identifier as a string with a default value generated by the uuid() function
  email String @unique // Define the User's email as a string and enforce uniqueness
  password String // Define the User's password as a string
  files File[] // Define a relation between the User and the File models, where a User can have many Files
}

// Define the File model
model File {
  id String @id @default(uuid()) // Define the File's unique identifier as a string with a default value generated by the uuid() function
  name String // Define the File's name as a string
  size Int // Define the File's size as an integer
  path String // Define the File's path as a string
  uploader User @relation(fields: [uploaderId], references: [id]) // Define a relation between the File and User models, where a File belongs to a User
  uploaderId String // Define the uploaderId field as a string that references the id field of the User model
  shared Boolean @default(false) // Define a Boolean field to indicate whether the File has been shared, with a default value of false
}